{
  "name": "kp-code-digital-vault",
  "description": "Frontend-only e-commerce app (Vanilla JS).",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint:html": "html-validate \"**/*.html\" --ignore \"**/dist/**\" --ignore \"**/node_modules/**\"",
    "min:css": "node scripts/minify-css.js",
    "min:js": "node scripts/minify-js.js",
    "build:min": "npm run min:css && npm run min:js",
    "serve": "serve .",
    "serve:dist": "serve dist",
    "video:build": "node scripts/video-build.js",
    "video:clean": "node scripts/video-clean.js",
    "img:build": "node scripts/img-build.js",
    "img:clean": "node scripts/img-clean.js"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "fast-glob": "^3.3.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "html-validate": "^8.24.0",
    "picocolors": "^1.0.0",
    "prettier": "^3.3.3",
    "serve": "^14.2.4",
    "sharp": "^0.33.2",
    "terser": "^5.37.0"
  }
}
