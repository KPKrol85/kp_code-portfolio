{
  "name": "volt-garage",
  "private": true,
  "devDependencies": {
    "chalk": "^5.3.0",
    "cssnano": "^6.1.0",
    "eslint": "^8.57.0",
    "fast-glob": "^3.3.2",
    "html-validate": "^10.4.0",
    "minimist": "^1.2.8",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.7.4",
    "sharp": "^0.33.2",
    "stylelint": "^16.13.0",
    "stylelint-config-recommended": "^14.0.0",
    "terser": "^5.31.0"
  },
  "scripts": {
    "img:opt": "node tools/image-optimizer/optimize-images.mjs --only=all",
    "img:opt:jpg": "node tools/image-optimizer/optimize-images.mjs --only=jpg",
    "img:opt:png": "node tools/image-optimizer/optimize-images.mjs --only=png",
    "img:opt:all": "node tools/image-optimizer/optimize-images.mjs --only=all",
    "img:opt:out": "node tools/image-optimizer/optimize-images.mjs --mode=output --out=tools/image-optimizer/output --only=all",
    "img:opt:dry": "node tools/image-optimizer/optimize-images.mjs --dry-run --only=all",
    "minify:css": "postcss css/main.css -o css/main.min.css --no-map -u cssnano",
    "minify:js": "terser js/main.js -o js/main.min.js -c -m",
    "build": "npm run minify:css && npm run minify:js",
    "watch:css": "postcss css/main.css -o css/main.min.css --watch --no-map -u cssnano",
    "qa": "npm run qa:html && npm run qa:js && npm run qa:css",
    "qa:format": "npm run format:check",
    "qa:html": "html-validate --config htmlvalidate.json index.html pages/cart.html pages/checkout.html pages/contact.html pages/cookies.html pages/kolekcje.html pages/nowosci.html pages/polityka-prywatnosci.html pages/product.html pages/promocje.html pages/regulamin.html pages/shop.html",
    "qa:js": "eslint --max-warnings 0 \"js/**/*.js\" \"tools/**/*.mjs\"",
    "qa:css": "stylelint --max-warnings 0 \"css/**/*.css\"",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "validate:jsonld": "node scripts/validate-jsonld.js"
  }
}
