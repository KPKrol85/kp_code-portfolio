{
  "plugins": {
    "postcss-import": {},
    "postcss-nested": {},
    "postcss-preset-env": {
      "stage": 1,
      "features": {
        "nesting-rules": true,
        "custom-properties": true
      },
      "autoprefixer": {
        "grid": true,
        "flexbox": "no-2009"
      }
    },
    "cssnano": {
      "preset": [
        "default",
        {
          "discardComments": { "removeAll": true },
          "normalizeWhitespace": true
        }
      ]
    }
  }
}
