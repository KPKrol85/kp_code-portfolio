{
  "name": "solidcraft-construction-website",
  "version": "1.0.0",
  "private": true,
  "description": "SolidCraft — static front-end implementation of a construction company website (HTML, CSS, JavaScript, PostCSS).",
  "author": {
    "name": "Kamil Król (KP_Code)",
    "email": "kontakt@kp-code.pl"
  },
  "homepage": "https://construction-pr-01-solidcraft.netlify.app/",
  "license": "MIT",
  "scripts": {
    "start": "npm run dev",
    "dev": "live-server --port=15500 --open=index.html --quiet",
    "build:css": "postcss css/style.css --no-map -o css/style.min.css && node scripts/verify-css-build.js",
    "build:js": "esbuild js/script.js --bundle --minify --target=es2018 --format=iife --outfile=js/script.min.js && node scripts/verify-js-build.js",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "postcss css/style.css --watch --no-map -o css/style.min.css",
    "watch:js": "esbuild js/script.js --bundle --minify --target=es2018 --format=iife --outfile=js/script.min.js --watch=forever",
    "build:dist": "node scripts/build-dist.js",
    "format": "prettier -w \"**/*.{html,css,js,json,md}\"",
    "format:check": "prettier -c \"**/*.{html,css,js,json,md}\"",
    "images:build": "node scripts/images.js build",
    "images:clean": "node scripts/images.js clean"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^6.1.2",
    "esbuild": "^0.27.0",
    "live-server": "1.2.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-preset-env": "^10.4.0",
    "prettier": "3.3.3",
    "sharp": "^0.34.5",
    "terser": "^5.31.0"
  },
  "engines": {
    "node": ">=18"
  }
}
