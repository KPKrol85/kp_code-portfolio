{
  "name": "solidcraft-construction-website",
  "version": "1.0.0",
  "private": true,
  "description": "SolidCraft — statyczna strona internetowa firmy budowlano-remontowej. Oferta, realizacje, opinie, FAQ oraz formularz kontaktowy.",
  "author": {
    "name": "Kamil Król",
    "email": "kontakt@kp-code.pl"
  },
  "homepage": "https://construction-pr-01-solidcraft.netlify.app/",
  "license": "UNLICENSED",
  "scripts": {
    "start": "npm run dev",
    "dev": "live-server --port=15500 --open=index.html --quiet",
    "format": "prettier -w \"**/*.{html,css,js,json,md}\"",
    "format:check": "prettier -c \"**/*.{html,css,js,json,md}\"",
    "build:css": "postcss css/style.css -o css/style.min.css --no-map",
    "build:js": "terser js/script.js -o js/script.min.js -c -m",
    "build": "npm run build:css && npm run build:js && npm run format",
    "images:build": "node scripts/images.js build",
    "images:clean": "node scripts/images.js clean"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^6.1.2",
    "live-server": "1.2.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-preset-env": "^10.4.0",
    "prettier": "3.3.3",
    "sharp": "^0.34.5",
    "terser": "^5.31.0"
  },
  "engines": {
    "node": ">=18"
  }
}
