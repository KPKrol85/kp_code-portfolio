  "keywords": [
    "KP_Code",
    "Kamil Król",
    "frontend",
    "portfolio",
    "restaurant",
    "fine dining",
    "gastronomy",
    "HTML",
    "CSS",
    "JavaScript",
    "responsive",
    "accessibility",
    "SEO",
    "PWA"
